                    android:background="@drawable/btn_back"
                    android:text="Pesan"
                    android:textAllCaps="false"
                    android:textColor="@color/textColor"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/number2"/>




            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/itemIcon3"
                    android:layout_width="84dp"
                    android:layout_height="112dp"
                    android:src="@drawable/john" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John"
                    android:textSize="14sp"
                    android:textColor="#3B566E"
                    android:layout_toEndOf="@+id/itemIcon3"
                    android:layout_toRightOf="@+id/itemIcon3"
                    android:id="@+id/name3"
                    android:layout_margin="5dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rating"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/name3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/itemIcon3"
                    android:drawableStart="@drawable/location"
                    android:layout_toRightOf="@+id/itemIcon3"
                    android:drawableLeft="@drawable/location"
                    android:layout_below="@+id/name3"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:id="@+id/loc3"
                    android:layout_margin="5dp"
                    android:text="@string/jakarta"/>
                <TextView
                    android:id="@+id/number3"
                    android:layout_width="wrap_content"
