                    android:text="Todung M. Lubis"
                    android:textSize="14sp"
                    android:textColor="#3B566E"
                    android:layout_toEndOf="@+id/itemIcon2"
                    android:layout_toRightOf="@+id/itemIcon2"
                    android:id="@+id/name2"
                    android:layout_margin="5dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rating"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/name2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/itemIcon2"
                    android:drawableStart="@drawable/location"
                    android:layout_toRightOf="@+id/itemIcon2"
                    android:drawableLeft="@drawable/location"
                    android:layout_below="@+id/name2"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:id="@+id/loc2"
                    android:layout_margin="5dp"
                    android:text="@string/jakarta"/>
                <TextView
                    android:id="@+id/number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/itemIcon2"
                    android:drawableStart="@drawable/phone"
                    android:layout_toRightOf="@+id/itemIcon2"
                    android:drawableLeft="@drawable/phone"
                    android:layout_below="@+id/loc2"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:layout_margin="5dp"
                    android:text="+12 345 678 901"/>
                <Button
